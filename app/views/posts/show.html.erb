<%= form_with(model: @post, url: posts_path, local: true) do |f| %>
 <div class="field">
   <p class="detail__message">
     <%= @post.text %>
   </p>
     <%= attachment_image_tag @post, :post_image  %>
  </div>  
<% end %>
  <% if user_signed_in? && current_user.id == @post.user_id %>
      <%= link_to current_user.name,user_path(@post.user.id), class: :prototype__user %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_post_path(@post.id), method: :get, class: :prototype__btn %>
          <%= link_to "削除する", post_path, method: :delete, class: :prototype__btn %>
        </div>
      <% end %>