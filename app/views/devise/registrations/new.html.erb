<div class="main_form">
  <div class="boxs">
    <div class="box-inner">
      <h1>アカウントを作成</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="box-email">
          <%= f.label :name, "名前"%>
          <%= f.text_field :name%>
        </div>

        <div class="box-email">
          <%= f.label :profile, "プロフィール" %>
          <%= f.text_field :profile , class: "profile"%>
        </div>

        <div class="box-email">
          <%= f.label :email, "Eメールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="box-email">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="box-email">
          <%= f.label :password_confirmation, "もう一度パスワードを入力してください" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="box-login">
          <%= f.submit "アカウントを作成" %>
          <div class="legal-text">
            サインインすることにより、PHOTOLABの
            <%= link_to "利用規約", "#" %>
            および
            <%= link_to "プライバシー規約", "#" %>
            に同意するものとみなされます。
          </div>
        </div>
      <% end %>
      <div class="box-newusr">
        <p><span>------</span> PHOTOLABのアカウントをお持ちですか？ <span>------</span></p>
        <%= link_to "PHOTOLABアカウントにログイン", new_session_path(resource_name) %><br />
      </div>
    </div>
  </div>
</div>
