<div class="main_form">
  <div class="main">
    <div class="inner">
      <div class="user__wrapper">
        <h2 class="page-heading">
          <%= "#{@name}さんの情報"%>
        </h2>

      <%if user_signed_in? && current_user != @user %>
        <% if user_signed_in? && current_user != @user %>
          <% if current_user.active_relationships.exists?(target_user_id: @user.id) %>
            <%= link_to 'unfollow', [@user, :follow], method: :delete %>
          <% else %>
            <%= link_to 'follow', [@user, :follow], method: :post %>
          <% end %>
        <% end %>
      <% end %>

      <div>
    <div>
      <%= link_to 'followings', [@user, :followings] %>
    </div>
    <div>
      <%= link_to 'followers', [@user, :followers] %>
    </div>
</div>


        <div class='user-form'>
          <div class="user-forms">
            <div class='user_image'>
              <%= attachment_image_tag @user, :user_image, fallback: "photo.jpg" %>
              
            </div>
            <div class="user_name">
            <%= @user.name %>
            </div>
          </div>
          <div class="user_profile">
            <div class="user_profiles">
            <%= @user.profile %>
            </div>
          </div>
          <div class="user_button">
            <div class="user_buttons">投稿
            </div>
            <div class="user_buttons">フォロー
            </div>
            <div class="user_buttons">フォロワー
            </div>
            <div class="user_buttons">いいね
            </div>
          </div>
        </div>  
        <div class="user-post">
          <div class="`user_post-contents">
            <% @posts.each do |post| %>
              <div class="user_post-content">
                <div class="post_body">
                  <div class='image_content'>
                    <%= link_to attachment_image_tag(post, :post_image, class: "post_image"),post_path(post.id)%>
                  </div>
                  <%= link_to post.text, post_path(post.id), method: :get, class: :card__title%>
                </div>
              </div> 
            <% end %>
          </div>
        </div>
        </div>
    </div>
  </div>
</div>

